generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Minimal models to allow Prisma Client generation.
// These are mapped to existing tables; no migrations will be applied
// unless you generate and run Prisma migrations.

model User {
  id       String  @id @default(uuid()) @db.Uuid
  email    String  @unique
  name     String?
  role     String
  status   String  @default("ACTIVE")
  cell_id  String? @db.Uuid

  @@map("users")
}

model Cell {
  id             String  @id @default(uuid()) @db.Uuid
  name           String
  description    String?
  supervisor_id  String? @db.Uuid

  @@map("cells")
}

model CellLeader {
  cell_id String @db.Uuid
  user_id String @db.Uuid

  @@id([cell_id, user_id])
  @@map("cell_leaders")
}

model DailyPrayerLog {
  id        String   @id @default(uuid()) @db.Uuid
  user_id   String   @db.Uuid
  prayed_at DateTime @db.Timestamptz(6)

  @@map("daily_prayer_log")
}